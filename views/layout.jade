doctype 5
html
  head
    block head
      title= title
      link(rel='stylesheet', href='/css/style.css')
  body
    block content

    div(id='lobby')
      div(id='lobby_win')
        div(class='statusbar')
          div(id='lobby_player')
          div(id='lobby_status')
          a(id='about', href='#', class='button')= 'About'
        ul(id='lobby_arenas')
        div(id='lobby_chat')
          ul(id='lobby_chat_messages')
          form(id='lobby_chat_form')
            input(type='text')
            button(value='Send', class='button')
