// General
body
  margin  0
  padding 0
  color   #fff
  font    16px/24px 'Segoe UI', Helvetica, Arial, sans-serif
  text-shadow 1px 1px 1px #666

a
  color   #00B7FF
  text-decoration none

ul
  margin  0
  padding 0

.button
  display     block
  height      100%
  background  #00f
  color       #fff
  text-align  center
  text-shadow 1px 1px 1px #666
  line-height 24px

// Canvas
#game, #debug
  display block
  margin  auto


#debug
  position absolute
  // opacity 0.5
  top 0

// Lobby
#lobby
  display none
  width   100%
  height  100%
  position absolute
  top     0
  left    0
  background    rgba(0,0,0,95%)

#lobby.shown
  display       block

#lobby_win
  width  640px
  height 480px
  margin auto

// Lobby::StatusBar
#lobby_win > div.statusbar
  height          24px
  overflow        hidden
  line-height     24px

#about
  width  10%
  height 100%
  float  right

#lobby_player
  width 60%
  height: 100%;
  float left

#lobby_status
  width 30%
  height: 100%;
  float left
  text-align  center

// Lobby::Arenas
#lobby_arenas
  height   40%
  overflow-x hidden
  overflow-y scroll

// Lobby::Chat
#lobby_chat
  height   50%

#lobby_chat_messages
  height   90%
  overflow-x hidden
  overflow-y scroll

#lobby_chat_form
  height   10%

