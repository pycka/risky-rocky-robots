// General
body
  margin  0
  padding 0
  color   #fff
  font    14px/24px 'Segoe UI', Helvetica, Arial, sans-serif
  text-shadow 1px 1px 1px #666

a
  color   #999
  text-decoration    none
  -webkit-transition color ease-out 0.3s

a:hover
  color   #eee
  text-decoration underline

ul
  margin  0
  padding 0

.button
  display     block
  height      100%
  background  #00f
  color       #fff
  text-align  center
  text-shadow 1px 1px 1px #666
  line-height 24px



// Canvas

#game, #debug
  display block
  margin  auto



#debug
  position absolute
  // opacity 0.5
  top 0

// Lobby

#lobby
  display none
  width   100%
  height  100%
  position absolute
  top     0
  left    0
  background    rgba(0,0,0,95%)

#lobby.shown
  display       block

#lobby > .win
  width  640px
  margin auto



// Lobby::StatusBar

#lobby > .win > div.statusbar
  height          24px
  overflow        hidden
  line-height     24px

#lobby_about
  width  10%
  height 100%
  float  right

#lobby_player
  width 60%
  height: 100%;
  float left

#lobby_status
  width 30%
  height: 100%;
  float left
  text-align  center



// Lobby::Arenas

#lobby_arenas
  width    100%
  height   200px
  overflow-x hidden
  overflow-y auto
#lobby_arenas_tab
  width     100%

#lobby_arena_options
  text-align right

