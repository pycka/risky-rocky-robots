// General
body
  margin  0
  padding 0
  color   #fff
  font    14px/24px 'Segoe UI', Helvetica, Arial, sans-serif

a
  color   #999
  text-decoration    none
  -webkit-transition color ease-out 0.3s

a:hover
  color   #eee
  text-decoration underline

ul
  margin  0
  padding 0

section
  display block

table
  border  0
  width   100%
table > thead
  font-weight   bold
  color         red
td
  text-align    center
td:first-child
  text-align    left

.button
  display     block
  height      100%
  background  #00f
  color       #fff
  text-align  center
  text-shadow 1px 1px 1px #666
  line-height 24px

.clip
  width    100%
  height   200px
  overflow-x hidden
  overflow-y auto
  border-bottom 1px solid #fff
  border-top    1px solid #fff


// Canvas

#game, #debug
  display block
  margin  auto



// TITLE SECTION

section.title > h1
  color       red
  text-align  center
  text-transform uppercase
  font-weight normal

section.title > h1 > span.amp
  color       #444
  text-shadow 1px 1px 0px #666
  position    relative
  font-size   120%
  top         -4px

#debug
  position absolute
  // opacity 0.5
  top 0

// Lobby

#lobby
  display none
  width   100%
  height  100%
  position absolute
  top     0
  left    0
  background    rgba(0,0,0,95%)

#lobby.shown
  display       block

#lobby > .win
  width  640px
  margin auto



// Lobby::StatusBar

section.statusbar
  height          24px
  overflow        hidden
  line-height     24px


section.statusbar > .player
  width 60%
  height: 100%;
  float left

section.statusbar > .status
  width       30%
  height      100%;
  float       left
  text-align  center

#lobby_about
  width  10%
  height 100%
  float  right


